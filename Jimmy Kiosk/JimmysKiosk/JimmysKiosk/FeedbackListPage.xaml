<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JimmysKiosk.FeedbackListPage"
             Title="Feedback History">

    <StackLayout Padding="10">
        <Label Text="Customer Feedback" 
               FontSize="Large" 
               HorizontalOptions="Center" 
               Margin="0,10,0,20" />

        <!-- 🧹 Clear All Button -->
        <Button Text="Clear All Feedback"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="OnClearFeedbackClicked"
                Margin="0,0,0,10"/>

        <!-- List of feedbacks -->
        <ListView x:Name="FeedbackList" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding CustomerName}" FontAttributes="Bold" />
                            <Label Text="{Binding Comments}" />
                            <Label Text="Rating: {Binding Rating}" FontSize="Small" />
                            <Label Text="{Binding Timestamp}" FontSize="Micro" TextColor="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
