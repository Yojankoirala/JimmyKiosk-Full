<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JimmysKiosk.ViewCartPage"
             Title="Your Cart">

    <ContentPage.Resources>
        <!-- Define styles for UI elements -->
        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="CornerRadius" Value="12"/>
            <!-- Rounded corners for the card -->
            <Setter Property="Padding" Value="15"/>
            <!-- Padding inside the card -->
            <Setter Property="Margin" Value="0,10"/>
            <!-- Margin around the card -->
            <Setter Property="BackgroundColor" Value="White"/>
            <!-- Background color of the card -->
            <Setter Property="HasShadow" Value="True"/>
            <!-- Enable shadow for the card -->
        </Style>
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#F85C50"/>
            <!-- Background color for the remove button -->
            <Setter Property="TextColor" Value="White"/>
            <!-- Text color for the remove button -->
            <Setter Property="FontAttributes" Value="Bold"/>
            <!-- Bold text for the remove button -->
            <Setter Property="CornerRadius" Value="8"/>
            <!-- Rounded corners for the remove button -->
            <Setter Property="WidthRequest" Value="40"/>
            <!-- Width of the remove button -->
            <Setter Property="HeightRequest" Value="40"/>
            <!-- Height of the remove button -->
            <Setter Property="FontSize" Value="18"/>
            <!-- Font size for the remove button -->
            <Setter Property="Margin" Value="0,0,0,0"/>
            <!-- Margin around the remove button -->
        </Style>
        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="WidthRequest" Value="40"/>
            <!-- Width of the quantity buttons -->
            <Setter Property="HeightRequest" Value="40"/>
            <!-- Height of the quantity buttons -->
            <Setter Property="CornerRadius" Value="20"/>
            <!-- Rounded corners for the quantity buttons -->
            <Setter Property="BackgroundColor" Value="#F0F0F0"/>
            <!-- Background color for the quantity buttons -->
            <Setter Property="TextColor" Value="#333"/>
            <!-- Text color for the quantity buttons -->
            <Setter Property="FontSize" Value="20"/>
            <!-- Font size for the quantity buttons -->
        </Style>
        <Style x:Key="ProceedButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#3EC6E0"/>
            <!-- Background color for the proceed button -->
            <Setter Property="TextColor" Value="White"/>
            <!-- Text color for the proceed button -->
            <Setter Property="FontSize" Value="20"/>
            <!-- Font size for the proceed button -->
            <Setter Property="FontAttributes" Value="Bold"/>
            <!-- Bold text for the proceed button -->
            <Setter Property="CornerRadius" Value="10"/>
            <!-- Rounded corners for the proceed button -->
            <Setter Property="HeightRequest" Value="50"/>
            <!-- Height of the proceed button -->
            <Setter Property="Margin" Value="0,20,0,0"/>
            <!-- Margin around the proceed button -->
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">

            <!-- Header Section -->
            <Frame BackgroundColor="#F85C50" CornerRadius="16" Padding="20" Margin="0,0,0,10" HasShadow="False">
                <StackLayout>
                    <Label Text="🛒 Your Cart"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <!-- Title of the cart page -->
                    <Label Text="Review or update your selections"
                           FontSize="16"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <!-- Subtitle of the cart page -->
                </StackLayout>
            </Frame>

            <!-- Cart Items Collection -->
            <CollectionView x:Name="CartCollectionView"
                            ItemsSource="{Binding CartItems}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="Your cart is empty!"
                           FontSize="18"
                           TextColor="#888"
                           HorizontalOptions="Center"
                           VerticalOptions="CenterAndExpand"/>
                    <!-- Message when the cart is empty -->
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardStyle}">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                                    <Label Text="{Binding Icon}" FontSize="32"/>
                                    <!-- Icon for the menu item -->
                                    <StackLayout>
                                        <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                        <!-- Name of the menu item -->
                                        <Label Text="{Binding Description}" FontSize="14" TextColor="#888"/>
                                        <!-- Description of the menu item -->
                                    </StackLayout>
                                    <Label Text="{Binding Price}" FontSize="16" TextColor="#3EC6E0" HorizontalOptions="EndAndExpand"/>
                                    <!-- Price of the menu item -->
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center" Margin="0,5,0,0">
                                    <Label Text="Qty:" FontSize="16" TextColor="#333"/>
                                    <!-- Quantity label -->
                                    <Button Text="-" Style="{StaticResource QuantityButtonStyle}" Clicked="OnDecreaseQuantityClicked" CommandParameter="{Binding .}" />
                                    <!-- Decrease quantity button -->
                                    <Label Text="{Binding Quantity}" FontSize="16" TextColor="#333" WidthRequest="40" HorizontalTextAlignment="Center"/>
                                    <!-- Display current quantity -->
                                    <Button Text="+" Style="{StaticResource QuantityButtonStyle}" Clicked="OnIncreaseQuantityClicked" CommandParameter="{Binding .}" />
                                    <!-- Increase quantity button -->
                                    <Button Text="🗑" Style="{StaticResource RemoveButtonStyle}" Clicked="OnRemoveItemClicked" CommandParameter="{Binding .}" />
                                    <!-- Remove button -->
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Total and Proceed Button -->
            <StackLayout>
                <Label x:Name="TotalLabel"
                       Text="Total: $0.00"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#232F34"
                       HorizontalOptions="End"
                       Margin="0,10,0,0"/>
                <!-- Display total price -->
                <Button Text="Proceed to Payment"
                        Style="{StaticResource ProceedButtonStyle}"
                        Clicked="OnProceedToPaymentClicked"/>
                <!-- Button to proceed to payment -->
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
