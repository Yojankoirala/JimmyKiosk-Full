<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JimmysKiosk.DinnerPage"
             Title="Dinner Menu">

    <ContentPage.Resources>
        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="HasShadow" Value="True"/>
        </Style>
        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#232F34"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="WidthRequest" Value="40"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BackgroundColor" Value="#F0F0F0"/>
            <Setter Property="TextColor" Value="#333"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">

            <!-- Header Section -->
            <Frame BackgroundColor="#F85C50" CornerRadius="16" Padding="20" Margin="0,0,0,10" HasShadow="False">
                <StackLayout>
                    <Label Text="🍽️ Dinner Menu"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Indulge in our delectable dinner offerings!"
                           FontSize="16"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Menu Items Collection -->
            <CollectionView x:Name="DinnerCollectionView"
                            ItemsSource="{Binding DinnerItems}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardStyle}">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Label Text="{Binding Icon}" FontSize="36"/>
                                    <StackLayout>
                                        <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                        <Label Text="{Binding Description}" FontSize="14" TextColor="#888"/>
                                        <Label Text="{Binding Price}" FontSize="16" TextColor="#3EC6E0"/>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center" Margin="0,10,0,0">
                                    <Button Text="-" Style="{StaticResource QuantityButtonStyle}" Clicked="OnDecreaseQuantityClicked" CommandParameter="{Binding .}" />
                                    <Label Text="{Binding Quantity}" FontSize="18" WidthRequest="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                    <Button Text="+" Style="{StaticResource QuantityButtonStyle}" Clicked="OnIncreaseQuantityClicked" CommandParameter="{Binding .}" />
                                </StackLayout>
                                <Button Text="ADD TO CART"
                                        Style="{StaticResource AddToCartButtonStyle}"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnAddToCartClicked"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- View Cart Button -->
            <Button Text="VIEW CART"
                    BackgroundColor="#3EC6E0"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Margin="0,20,0,0"
                    HeightRequest="50"
                    Clicked="OnViewCartClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
